extends layout

block content
  for vid in videos
    .col-md-3
      a(href="#{vid.link}" title="#{vid.title}" data-no-instant)
        img.img-responsive(src="#{vid.img}")
        span.video-time= vid.time
        if vid.title.length > 25
          h5: a(href="#{vid.link}" title="#{vid.title}" data-no-instant).
            #{vid.title.substr(0, 20)}...
        else
          h5: a(href="#{vid.link}" title="#{vid.title}" data-no-instant)= vid.title
        h6
          | by&nbsp;
          a(href="https://www.youtube.com/channel/#{vid.author}/videos?view=0" target="_blank" data-no-instant).
            #{vid.author}
        h6 #{vid.viewCount} views
          span.text-muted &nbsp;#{vid.publishedAt}
