.navbar.navbar-default.navbar-static-top(role="navigation")
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/" title="Usub home")
        i.fa.fa-youtube-play.logo
        | Usub
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li: a(href="/about") About
        if user
          li: a(href='/subscriptions') Subscriptions
      form.navbar-form.navbar-left(role="search" onSubmit="return redirect();")
        .form-group
          input#search.form-control(type="text" placeholder="Search on YouTube")
          | &nbsp;
          button.btn.btn-default(type="submit")
            span.fa.fa-search
      ul.nav.navbar-nav.navbar-right
        if !user
          li: a(href="/signup") Sign Up
          li: a(href="/login") Login
        else
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown' data-no-instant)
              if user.gravatar
                img(src='#{user.profile.avatar || user.gravatar(60)}' alt="Profile Pic")
              i.caret
            ul.dropdown-menu
              li
                a(href='/#{user.uid}')
                  span.fa.fa-user
                  | &nbsp;Profile
              li
                a(href='/settings/account')
                  span.fa.fa-cogs
                  | &nbsp;Account Settings
              li
                a(href='https://www.youtube.com/feed/history' data-no-instant)
                  span.fa.fa-history
                  | &nbsp;History
              li.divider
              li
                a(href='/logout' data-no-instant)
                  span.fa.fa-sign-out
                  |  Logout
