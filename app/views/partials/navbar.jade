.navbar.navbar-inverse.navbar-static-top(role="navigation")
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/") Usub
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          a(href="/") Home
        li
          a(href="/about") About
      ul.nav.navbar-nav.navbar-right
        if !user
          li
            a(href="/signup") Sign Up
          li
            a(href="/login") Login
        else
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown' data-no-instant)
              if user.gravatar
                img(src='#{user.profile.avatar || user.gravatar(60)}' alt="Profile Pic")
              i.caret
            ul.dropdown-menu
              li
                a(href='/#{user.uid}')
                  span.fa.fa-user
                  | &nbsp;Profile
              li
                a(href='/subscriptions')
                  span.fa.fa-youtube-play
                  | &nbsp;Manage subscriptions
              li
                a(href='/settings/account')
                  span.fa.fa-cogs
                  | &nbsp;Account Settings
              li.divider
              li
                a(href='/logout' data-no-instant)
                  span.fa.fa-sign-out
                  |  Logout
