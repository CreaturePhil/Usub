doctype html

html(lang="en-us")

  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="description" content="YouTube subscription feed that displays your subscriptions in a grid. Usub is more reliable than YouTube subscription's box because Usub doesn't filter subscriptions and works all the time so you will never miss your favorite Youtuber's videos!")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="csrf-token" content=_csrf id="csrf")

    if title
      title #{title} - Usub
    else
      title Usub

    if env === 'development'
      link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
      link(rel="stylesheet" href="/bower_components/fontawesome/css/font-awesome.min.css")
      link(rel="stylesheet" href="/bower_components/bootstrap-notify/css/bootstrap-notify.css")
      link(rel="stylesheet" href="/bower_components/bootswatch/simplex/bootstrap.min.css")
      link(rel="stylesheet" href="/css/styles.css")

    if env === 'production'
      link(rel="stylesheet" href="/assets/css/main.min.css")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  body

    include partials/navbar

    .container
      include partials/flash
      include partials/notify
      #content
        block content

      footer
        p
          | &copy; 2015 Usub &middot;
          a(href="/terms") Terms and Conditions
          |  &middot;
          a(href="/privacy") Privacy Policy

    if env === 'development'
      script(src="/bower_components/jquery/dist/jquery.min.js" data-no-instant)
      script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js" data-no-instant)
      script(src="/bower_components/bootstrap-notify/js/bootstrap-notify.js" data-no-instant)
      script(src="/bower_components/instantclick/instantclick.js" data-no-instant)
      script(src="/bower_components/bootstrap3-typeahead/bootstrap3-typeahead.min.js" data-no-instant)

      block scripts

      script(src="/js/instantclick-start.js" data-no-instant)
      script(src="/js/settings.js")
      script(src="/js/search.js")
      script(src="/js/autocomplete-typeahead.js")

    if env === 'production'
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" data-no-instant)
      script(src="/assets/js/main.min.js" data-no-instant)
      block scripts
      script(src="/assets/js/scripts.min.js")
