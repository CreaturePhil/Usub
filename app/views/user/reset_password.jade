extends ../layout

block content
  .row
    .col-md-6.col-md-offset-3
      h1.text-center Reset password
      br
      form(role="form" method="post")
        input(type="hidden" name="_csrf" value=_csrf)
        .form-group
          label New Password
          input.form-control(type="password" name="password" required)
        .form-group
          label Confirm Password
          input.form-control(type="password" name="confirmPassword" required)
        .form-group
          button.btn.btn-primary.center-block(type="submit") Confirm Password
